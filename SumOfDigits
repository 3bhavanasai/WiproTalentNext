import java.util.*;
class SumofDigits
{
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int sum=0;
		int rem;
		System.out.println("enter a number: ");
		int a=sc.nextInt();
		while(a>0){
		    rem=a%10;
		    sum=sum+rem;
		    a=a/10;
		}
		System.out.println(sum);
	}
}
